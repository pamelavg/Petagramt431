<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_mascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cv_mascota_margin_button"
    card_view:cardCornerRadius="@dimen/cv_corner_radious">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mascota"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/img_mascota1_1"
            android:layout_gravity="center"
            />


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_bone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/dog_bone" />

            <TextView
                android:id="@+id/txt_left_cardview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/img_bone" />




            <ImageView
                android:id="@+id/img_bone_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/dog_bone_yellow"/>

            <TextView
                android:id="@+id/txt_rigth_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_bone_yellow" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>